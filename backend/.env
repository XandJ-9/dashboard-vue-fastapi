# 数据库配置
# 数据库类型: "sqlite" 或 "postgresql"
DB_TYPE=sqlite
# 如果使用SQLite，可以注释掉下面的PostgreSQL连接URL
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/admin_template

# 安全配置
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 应用配置
API_PREFIX=/api
BACKEND_CORS_ORIGINS=["http://localhost:3000"]
PROJECT_NAME=Admin Template API
DEBUG=True